<div class="col-md-3">
            <h2>User info</h2>
            <%= attachment_image_tag current_user,:profile_image,:fill,63,63,fallback:"no_image.jpg" %>
            <table class="table">
                <tbody>
                    <tr></tr>
                    <tr>
                        <th>name</th>
                        <th>
                            <%= current_user.name %>
                        </th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th>
                            <%= current_user.introduction %>
                        </th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href=edit_user_path></a>
            </div>
            
            <h2 class="mt-3">New book</h2>
            <%= form_with model:book,local:true do |f| %>
            <div class="form-group">
                <div>
                    <label for="book_title">Title</label>
                </div>
                <%= f.text_field :title %>
            </div>
            <div class="form-group">
                <div>
                    <label for="book_body">Opinion</label>
                </div>
                <%= f.text_area :body %>
            </div>
            <div class="form-group">
                <%= f.submit "Create Book", class:"btn btn-success" %>
            </div>
            <% end %>
        </div>